<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Progress Indicator -->
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="24dp"
                app:indicatorColor="@color/primary"
                app:trackColor="@color/surface_variant"
                app:trackThickness="4dp" />

            <!-- Title and Step Counter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vital Signs"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStepCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 2 of 4"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Enter your current vital signs for accurate assessment"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Health Device Integration -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDeviceConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_decives"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Connect Health Devices"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Auto-fill from your connected devices for faster input"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnectDevice"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect to Health App"
                    app:icon="@drawable/ic_bluetooth"
                    app:iconGravity="start" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SpO2 Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSpo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Icon and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_oxygen"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="SpO₂ (Oxygen Saturation)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSpo2Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:background="@drawable/bg_status_normal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/success"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Value Display -->
                <TextView
                    android:id="@+id/tvSpo2Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="98 %"
                    android:textColor="@color/primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSpo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="70"
                    android:valueTo="100"
                    android:value="98"
                    android:stepSize="1"
                    app:trackColorActive="@color/primary"
                    app:trackColorInactive="@color/surface_variant"
                    app:thumbColor="@color/primary"
                    app:haloColor="@color/primary_light" />

                <!-- Range Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="70%"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal: 95-100%"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="100%"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Manual Input Option -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/spo2InputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Or enter value manually"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_edit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSpo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="98.0" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Heart Rate Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeartRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Icon and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Heart Rate"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHeartRateStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:background="@drawable/bg_status_normal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/success"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Value Display -->
                <TextView
                    android:id="@+id/tvHeartRateValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="75 bpm"
                    android:textColor="@color/primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderHeartRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="40"
                    android:valueTo="200"
                    android:value="75"
                    android:stepSize="1"
                    app:trackColorActive="@color/primary"
                    app:trackColorInactive="@color/surface_variant"
                    app:thumbColor="@color/primary"
                    app:haloColor="@color/primary_light" />

                <!-- Range Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40 bpm"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal: 60-100 bpm"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="200 bpm"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Manual Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hrInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Or enter value manually"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_edit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHeartRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="75" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Temperature Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Icon and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tenperature"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Body Temperature"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTemperatureStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:background="@drawable/bg_status_normal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/success"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Value Display -->
                <TextView
                    android:id="@+id/tvTemperatureValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="37.0 °C"
                    android:textColor="@color/primary"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="35"
                    android:valueTo="42"
                    android:value="37.0"
                    android:stepSize="0.1"
                    app:trackColorActive="@color/primary"
                    app:trackColorInactive="@color/surface_variant"
                    app:thumbColor="@color/primary"
                    app:haloColor="@color/primary_light" />

                <!-- Range Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="35°C"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal: 36.5-37.5°C"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="42°C"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Manual Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tempInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Or enter value manually"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_edit">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:text="37.0" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <!-- Perfusion & Pulse Metrics (MANDATORY) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPerfusionPulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface"
            app:strokeColor="@color/outline_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="534dp"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with Expand/Collapse -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Icon with Badge -->
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/is_pulse"
                            android:tint="@color/primary" />

                        <TextView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="top|end"
                            android:background="@drawable/bg_metric_indicator"
                            android:gravity="center"
                            android:text="!"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:visibility="gone" />

                    </FrameLayout>

                    <!-- Title and Description -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perfusion and Pulse Metrics"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Advanced cardiovascular indicators"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Expand/Collapse Button -->
                    <ImageButton
                        android:id="@+id/btnExpandMetrics"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Expand/collapse advanced metrics"
                        android:src="@drawable/ic_expand_more"
                        android:tint="@color/primary" />

                </LinearLayout>

                <!-- Content Area (Initially visible) -->
                <LinearLayout
                    android:id="@+id/contentMetrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Quick Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_metric_info"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_info"
                            android:tint="@color/primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:lineSpacingExtra="2dp"
                            android:text="These metrics help assess blood flow and heart function"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Two-Column Input Layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="171dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <!-- Perfusion Index Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Perfusion Index"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/piInputLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter value"
                                app:boxBackgroundColor="@color/surface_container_lowest"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/text_secondary"
                                app:helperText="Normal: 1.0 - 10.0"
                                app:helperTextEnabled="true"
                                app:startIconDrawable="@drawable/ic_perfusion">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPerfusionIndex"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:importantForAutofill="no"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:maxLength="5"
                                    android:text="5.0" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Quick Buttons for Common Values -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="40dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_weight="1"
                                    android:text="L"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.TonalButton"
                                    android:layout_width="44dp"
                                    android:layout_height="32dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    android:text="Normal (5.0)"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="43dp"
                                    android:layout_height="35dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:text="High (10.0)"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Pulse Variability Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Pulse Variability"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/pvInputLayout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter value"
                                app:boxBackgroundColor="@color/surface_container_lowest"
                                app:endIconMode="clear_text"
                                app:endIconTint="@color/text_secondary"
                                app:helperText="Typical: 0.5 - 3.0"
                                app:helperTextEnabled="true"
                                app:startIconDrawable="@drawable/ic_variability">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPulseVariability"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:importantForAutofill="no"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:maxLength="5"
                                    android:text="1.2" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Quick Buttons for Common Values -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_weight="1"
                                    android:text="Low (0.5)"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.TonalButton"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_marginHorizontal="4dp"
                                    android:layout_weight="1"
                                    android:text="Normal (1.2)"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                                <com.google.android.material.button.MaterialButton
                                    style="@style/Widget.Material3.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_weight="1"
                                    android:text="High (3.0)"
                                    android:textSize="10sp"
                                    app:cornerRadius="8dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Status Indicators -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Perfusion Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_status_normal"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_check_circle"
                                android:tint="@color/success" />

                            <TextView
                                android:id="@+id/tvPerfusionStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Perfusion: Normal"
                                android:textColor="@color/success"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Pulse Variability Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_status_normal"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_check_circle"
                                android:tint="@color/success" />

                            <TextView
                                android:id="@+id/tvPulseStatus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Pulse: Normal"
                                android:textColor="@color/success"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Note -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_notes"
                        android:lineSpacingExtra="2dp"
                        android:padding="12dp"
                        android:text="⚠️ These are advanced metrics. If unsure, leave at default values."
                        android:textColor="@color/warning"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>





        <!-- Advanced Options Card (Expandable) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAdvanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Advanced Header -->
                <LinearLayout
                    android:id="@+id/advancedHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_advanced"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Advanced Options (Optional)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/ivExpandAdvanced"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        app:tint="@color/text_secondary" />
                </LinearLayout>

                <!-- Advanced Content (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/advancedContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:paddingTop="0dp"
                    android:visibility="gone">

                    <!-- Perfusion Index -->


                    <!-- Pulse Variability -->




                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Back"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Next"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>