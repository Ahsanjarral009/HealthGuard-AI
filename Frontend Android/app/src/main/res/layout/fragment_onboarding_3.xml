<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Privacy, Our Priority"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/info"
            android:layout_gravity="center" />

        <!-- Illustration -->
        <ImageView
            android:id="@+id/imgPrivacy"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Privacy Illustration"
            android:src="@drawable/bolt_14680996" />

        <!-- Privacy Features Checklist -->
        <LinearLayout
            android:id="@+id/privacyChecklist"
            android:layout_width="match_parent"

            android:layout_height="227dp"
            android:layout_marginTop="24dp"

            android:orientation="vertical">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"

                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="51dp"
                    android:layout_height="58dp"
                    android:contentDescription="Encrypted Data"
                    android:src="@drawable/security_18264684" />

                <LinearLayout
                    android:layout_width="294dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="163dp"
                        android:layout_height="wrap_content"
                        android:text="Encrypted Data"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All your health information is end-to-end encrypted."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"

                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="52dp"
                    android:contentDescription="You're in Control"
                    android:src="@drawable/testing_11176231" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="164dp"
                        android:layout_height="20dp"
                        android:text="You're in Control"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text="Choose what to share. Delete your data anytime from settings."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="56dp"
                    android:contentDescription="No Unnecessary Sharing"
                    android:src="@drawable/restricted_18607799" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="61dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="No Unnecessary Sharing"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:text="We never sell your data to third parties or advertisers."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Medical Disclaimer Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/important_box_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="193dp"
                android:layout_height="31dp"
                android:text="ðŸ”¬ Medical Advisory"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="335dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:text="This tool provides risk assessment only. It does not replace professional medical diagnosis or treatment."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Final Call-to-Action Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/green_primary"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Ready to Begin Your Health Journey?"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
