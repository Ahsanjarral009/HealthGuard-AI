<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progressIndicator"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="24dp"
                android:progress="60"
                android:progressTint="@color/primary"
                android:progressBackgroundTint="@color/surface_variant" />

            <!-- Title and Step Counter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Symptoms"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStepCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3 of 4"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Select all symptoms you're experiencing in the last 24 hours"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <!-- Quick Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Quick Selection:"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/quickSelectionGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Symptoms" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFluLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flu-like Symptoms" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRespiratory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respiratory Issues" />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <!-- Respiratory Symptoms Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRespiratory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/respiratory_11924932" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Respiratory Symptoms"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRespiratoryCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/4"
                        android:background="@drawable/bg_count_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Symptoms Grid -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2">

                    <!-- Cough -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCough"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/cough_17910810"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Cough"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchCough"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Shortness of Breath -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardShortnessBreath"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/breath_1995830"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Shortness of Breath"
                                android:textAlignment="center"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchShortnessBreath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Sore Throat -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSoreThroat"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/infection_13779605"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Sore Throat"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchSoreThroat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Runny Nose -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardRunnyNose"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/mucus_18381395"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Runny Nose"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchRunnyNose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cardiac Symptoms Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCardiac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/health_7922906" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Cardiac Symptoms"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCardiacCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/2"
                        android:background="@drawable/bg_count_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Symptoms Grid -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2">

                    <!-- Chest Pain -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardChestPain"
                        app:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_img_chest"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Chest Pain"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchChestPain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Dizziness -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardDizziness"
                        app:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/dizziness_2853797"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Dizziness"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchDizziness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Systemic Symptoms Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSystemic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/apathy_12820737" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Systemic Symptoms"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSystemicCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/3"
                        android:background="@drawable/bg_count_badge"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Symptoms Grid -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="3">

                    <!-- Fatigue -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFatigue"
                        app:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/fatigue_18194118"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Fatigue"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchFatigue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Nausea -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardNausea"
                        app:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/puke_2599590"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Nausea"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchNausea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Confusion -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardConfusion"
                        app:layout_columnWeight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        app:strokeColor="@color/card_stroke_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/curiosity_7441184"
                                android:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Confusion"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchConfusion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:checked="false" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Additional Notes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_notes"
                        android:tint="@color/error" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Additional Notes (Optional)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Describe your symptoms in more detail:"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- Fixed: Proper TextInputLayout structure -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your additional notes here...">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAdditionalNotes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLength="200"
                        android:padding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Max 200 characters"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Back"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconGravity="start" />

            <com.google.android.material.button.MaterialButton
