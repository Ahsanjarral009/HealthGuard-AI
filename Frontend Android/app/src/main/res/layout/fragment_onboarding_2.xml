<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->

        <!-- Step 1: Input Symptoms -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:text="How It Works"
            android:textColor="@color/primary_dark"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Step 2: AI Analysis -->
        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/step_card_bg"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconStep1"
                android:layout_width="48dp"
                android:layout_height="59dp"
                android:contentDescription="Input Symptoms"
                android:src="@drawable/clipboard_12945695" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Share Your Symptoms"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Tell us how you're feeling through our simple, guided questionnaire."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Step 3: Results -->
        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/step_card_bg"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconStep2"
                android:layout_width="48dp"
                android:layout_height="72dp"
                android:contentDescription="AI Analysis"
                android:src="@drawable/analysis_11191673" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Smart Analysis"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="4dp"
                    android:text="Our AI analyzes 27 health indicators to assess potential risks."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/step_card_bg"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconStep3"
                android:layout_width="48dp"
                android:layout_height="69dp"
                android:contentDescription="Clear Results"
                android:src="@drawable/result_2720920" />

            <LinearLayout
                android:layout_width="262dp"
                android:layout_height="84dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Clear Guidance"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="4dp"
                    android:text="Receive understandable results with actionable next steps."
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Important Message Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/important_box_bg"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="329dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="⚠️ Important: This is not a diagnosis. Always consult a doctor for medical advice."
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
