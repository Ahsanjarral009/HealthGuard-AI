<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Smart_disease_prediction_sys" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Custom attributes -->
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="buttonCornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:padding">14dp</item>
    </style>
</resources>
